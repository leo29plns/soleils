{
	"name": "soleils",
	"type": "module",
	"version": "0.0.1",
	"packageManager": "pnpm@10.11.0",
	"scripts": {
		"dev": "pnpm run pagefind:dev && astro dev",
		"build": "astro build && pagefind --site dist",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest --run",
		"test:watch": "vitest",
		"pagefind:dev": "astro build --outDir temp && pagefind --site temp && rm -rf public/pagefind && cp -r temp/pagefind public/ && rm -rf temp/",
		"prepare": "husky"
	},
	"dependencies": {
		"@astrojs/rss": "^4.0.12",
		"@astrojs/sitemap": "^3.5.0",
		"@astrojs/svelte": "^7.1.0",
		"astro": "^5.13.2",
		"iconoir": "^7.11.0",
		"sharp": "^0.34.3",
		"svelte": "^5.38.2",
		"typescript": "^5.9.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.0",
		"husky": "^9.1.7",
		"pagefind": "^1.3.0",
		"vitest": "^3.2.4"
	}
}
